      üåü –£—Å—ñ —Ñ–æ—Ä–º—É–ª–∏ –¥–ª—è —à–∫—ñ–ª—å–Ω–æ–≥–æ –∫—É—Ä—Å—É –≥–µ–æ–º–µ—Ç—Ä—ñ—ó (5‚Äì11 –∫–ª–∞—Å–∏)<br>
      –ê–≤—Ç–æ—Ä: –¢–≤—ñ–π —Ü–∏—Ñ—Ä–æ–≤–∏–π –ø–æ–º—ñ—á–Ω–∏–∫ –∑ –≥–µ–æ–º–µ—Ç—Ä—ñ—ó üí°
    </footer>
  </div>

  <script>
    const PI = Math.PI;

    function openTab(name) {
      document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
      document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
      document.getElementById(name).classList.add('active');
      event.target.classList.add('active');
    }

    function calc(type) {
      let resEl = document.getElementById(`res-${type}`);
      if (!resEl) return;

      const get = (id) => parseFloat(document.getElementById(`${type}-${id}`)?.value);

      let msg = "";
      switch(type) {
        case 'square':
          const a = get('a');
          if (a <= 0) { msg = "‚ùå –°—Ç–æ—Ä–æ–Ω–∞ –º–∞—î –±—É—Ç–∏ > 0"; break; }
          const S_sq = a*a;
          const P_sq = 4*a;
          const d_sq = a*Math.sqrt(2);
          msg = `S = ${S_sq.toFixed(2)} —Å–º¬≤, P = ${P_sq.toFixed(2)} —Å–º, d = ${d_sq.toFixed(2)} —Å–º`;
          break;

        case 'rect':
          const a1 = get('a'), b1 = get('b');
          if (a1 <= 0 || b1 <= 0) { msg = "‚ùå –°—Ç–æ—Ä–æ–Ω–∏ > 0"; break; }
          const S_r = a1*b1;
          const P_r = 2*(a1+b1);
          const d_r = Math.sqrt(a1*a1 + b1*b1);
          msg = `S = ${S_r.toFixed(2)} —Å–º¬≤, P = ${P_r.toFixed(2)} —Å–º, d = ${d_r.toFixed(2)} —Å–º`;
          break;

        case 'tri':
          const a2 = get('a'), h2 = get('h');
          if (a2 <= 0 || h2 <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          msg = `S = ${(0.5*a2*h2).toFixed(2)} —Å–º¬≤`;
          break;

        case 'par':
          const a3 = get('a'), h3 = get('h');
          if (a3 <= 0 || h3 <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          msg = `S = ${(a3*h3).toFixed(2)} —Å–º¬≤`;
          break;

        case 'romb':
          const d1 = get('d1'), d2 = get('d2');
          if (d1 <= 0 || d2 <= 0) { msg = "‚ùå –î—ñ–∞–≥–æ–Ω–∞–ª—ñ > 0"; break; }
          msg = `S = ${(0.5*d1*d2).toFixed(2)} —Å–º¬≤`;
          break;

        case 'trap':
          const a4 = get('a'), b4 = get('b'), h4 = get('h');
          if (a4 <= 0 || b4 <= 0 || h4 <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          msg = `S = ${(0.5*(a4+b4)*h4).toFixed(2)} —Å–º¬≤`;
          break;

        case 'circle':
          const r1 = get('r');
          if (r1 <= 0) { msg = "‚ùå –†–∞–¥—ñ—É—Å > 0"; break; }
          const S_c = PI*r1*r1;
          const C_c = 2*PI*r1;
          msg = `S = ${S_c.toFixed(2)} —Å–º¬≤, C = ${C_c.toFixed(2)} —Å–º`;
          break;

        case 'poly':
          const n = parseInt(get('n')), a5 = get('a');
          if (n < 3 || a5 <= 0) { msg = "‚ùå n ‚â• 3, a > 0"; break; }
          const S_p = (n * a5*a5) / (4 * Math.tan(PI/n));
          msg = `S = ${S_p.toFixed(2)} —Å–º¬≤`;
          break;

        case 'cube':
          const a6 = get('a');
          if (a6 <= 0) { msg = "‚ùå –°—Ç–æ—Ä–æ–Ω–∞ > 0"; break; }
          const V_cu = a6**3;
          const S_cu = 6*a6*a6;
          msg = `V = ${V_cu.toFixed(2)} —Å–º¬≥, S = ${S_cu.toFixed(2)} —Å–º¬≤`;
          break;

        case 'paral':
          const a7 = get('a'), b7 = get('b'), c7 = get('c');
          if (a7 <= 0 || b7 <= 0 || c7 <= 0) { msg = "‚ùå –°—Ç–æ—Ä–æ–Ω–∏ > 0"; break; }
          const V_pa = a7*b7*c7;
          const S_pa = 2*(a7*b7 + a7*c7 + b7*c7);
          msg = `V = ${V_pa.toFixed(2)} —Å–º¬≥, S = ${S_pa.toFixed(2)} —Å–º¬≤`;
          break;

        case 'prism':
          const S_pr = get('s'), H_pr = get('h');
          if (S_pr <= 0 || H_pr <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          msg = `V = ${(S_pr * H_pr).toFixed(2)} —Å–º¬≥`;
          break;

        case 'cyl':
          const r2 = get('r'), h5 = get('h');
          if (r2 <= 0 || h5 <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          const V_cy = PI*r2*r2*h5;
          const S_cy = 2*PI*r2*(r2 + h5);
          msg = `V = ${V_cy.toFixed(2)} —Å–º¬≥, S = ${S_cy.toFixed(2)} —Å–º¬≤`;
          break;

        case 'sphere':
          const r3 = get('r');
          if (r3 <= 0) { msg = "‚ùå –†–∞–¥—ñ—É—Å > 0"; break; }
          const V_sp = (4/3)*PI*r3**3;
          const S_sp = 4*PI*r3*r3;
          msg = `V = ${V_sp.toFixed(2)} —Å–º¬≥, S = ${S_sp.toFixed(2)} —Å–º¬≤`;
          break;

        case 'cone':
          const r4 = get('r'), h6 = get('h');
          if (r4 <= 0 || h6 <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          const V_co = (1/3)*PI*r4*r4*h6;
          const l = Math.sqrt(r4*r4 + h6*h6);
          const S_co = PI*r4*(r4 + l);
          msg = `V = ${V_co.toFixed(2)} —Å–º¬≥, S = ${S_co.toFixed(2)} —Å–º¬≤`;
          break;

        case 'pyr':
          const S_py = get('s'), H_py = get('h');
          if (S_py <= 0 || H_py <= 0) { msg = "‚ùå –î–∞–Ω—ñ > 0"; break; }
          msg = `V = ${(1/3 * S_py * H_py).toFixed(2)} —Å–º¬≥`;
          break;

        case 'tetra':
          const a8 = get('a');
          if (a8 <= 0) { msg = "‚ùå –°—Ç–æ—Ä–æ–Ω–∞ > 0"; break; }
          const V_te = (a8**3 * Math.sqrt(2)) / 12;
          const S_te = a8*a8 * Math.sqrt(3);
          msg = `V = ${V_te.toFixed(2)} —Å–º¬≥, S = ${S_te.toFixed(2)} —Å–º¬≤`;
          break;

        default:
          msg = "‚ùå –ù–µ–≤—ñ–¥–æ–º–∞ —Ñ—ñ–≥—É—Ä–∞";
      }

      resEl.textContent = msg;
    }
  </script>
</body>
</html>
